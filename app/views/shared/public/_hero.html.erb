<div class="position-relative overflow-hidden p-3 text-center bg-dark text-light">
  <div class="container">
    <div class="col-lg-10 p-lg-3 mx-auto my-5">
      <% if @stream.status == 'active' %>
        <video id="video" width="50%" controls></video>
        <script>
            poster = "https://image.mux.com/<%= @stream.playback_id %>/thumbnail.jpg";
            videoSrc = 'https://stream.mux.com/<%= @stream.playback_id %>.m3u8';
            let playerInstance = jwplayer('video');
            playerInstance.setup({
                file: videoSrc,
                image: poster,
                controls: true
            })
        </script>
      <% else %>
        <%= render 'shared/public/latest_sermon' %>
      <% end %>
    </div>
  </div>
</div>
